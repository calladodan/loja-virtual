<p id="notice"><%= notice %></p>

<h1>Itens Carrinho</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Carrinho</th>
      <th>Qtd adicionada</th>
      <th>Qtd reservada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itens_carrinho.each do |item_carrinho| %>
      <tr>
        <td><%= item_carrinho.item_id %></td>
        <td><%= item_carrinho.carrinho_id %></td>
        <td><%= item_carrinho.qtd_adicionada %></td>
        <td><%= item_carrinho.qtd_reservada %></td>
        <td><%= link_to 'Show', item_carrinho %></td>
        <td><%= link_to 'Edit', edit_item_carrinho_path(item_carrinho) %></td>
        <td><%= link_to 'Destroy', item_carrinho, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

